<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:icon">@android:color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="MyToolBarTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- common style for edittext -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text_material</item>
        <item name="android:textColor">@color/edittext_text</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
        <item name="android:textSize">@dimen/edittext_text_size</item>
    </style>

    <!-- common style for textview-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textview_text</item>
        <item name="android:textSize">@dimen/textview_text_size</item>
    </style>

    <!-- common style for button -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- common style for button with red background-->
    <style name="ButtonStyle.Red" parent="ButtonStyle">
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <!-- common style for button with green background-->
    <style name="ButtonStyle.Green" parent="ButtonStyle">
        <item name="android:background">@drawable/btn_green</item>
    </style>
</resources>
